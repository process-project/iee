%div
  %div#wrapper
    %div#login
      %section.login_content
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: {id: "registration_form"}) do |f|
          %h1= t("registration_form")
          = f.error_notification
          %div
            = f.input_field :email, required: true, class: form_input_class(:email),
              placeholder: t("email")
            - show_field_errors(:email)
          %div
            = f.input_field :password, required: true, class: form_input_class(:password),
              placeholder: t("password")
            - show_field_errors(:password)
          %div
            = f.input_field :password_confirmation, required: true,
              class: form_input_class(:password_confirmation),
              placeholder: t("confirmation_password")
            - show_field_errors(:password_confirmation)
          %div
            %a{href: "#", class: "btn btn-default submit",
              onclick: "$('#registration_form').submit();"}
              = t("register")
          %div.clearfix
          %div.separator
          %div.change_link
            = t("already_registered")
            %a.to_register{href: new_session_path(resource_name)}
              = t("login")
          = render "devise/shared/footer"