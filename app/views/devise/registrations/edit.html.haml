%div#wrapper
  %div#login
    %section.login_content
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put }) do |f|
        %h1= t("edit_form", who: resource_name.to_s.humanize)
        = f.error_notification
        %div
          = f.input_field :email, required: true, class: form_input_class(:email),
            placeholder: t("email")
          - show_field_errors(:email)
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p= t("account_confirmation", email: resource.unconfirmed_email)
        %div
          = f.input_field :password, required: false, class: form_input_class(:password),
            placeholder: t("password"), autocomplete: "off", hint: t("password_leave_blank")
          - show_field_errors(:password)
        %div
          = f.input_field :password_confirmation, required: false,
            class: form_input_class(:password_confirmation),
            placeholder: t("confirmation_password")
          - show_field_errors(:password_confirmation)
        %div
          = f.input_field :current_password, required: true,
            class: form_input_class(:current_password),
            placeholder: t("current_password"), hint: t("current_password_hint")
          - show_field_errors(:current_password)
        %div
          %button.btn.btn-default.submit
            = t("edit_registration_submit")
        %div.clearfix
        %div.separator
        %div.change_link
          = link_to t("remove_account"), registration_path(resource_name), data: { confirm: t("are_you_sure") }, method: :delete