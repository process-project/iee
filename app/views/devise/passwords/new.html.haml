%div
  %div#wrapper
    %div#login
      %section.login_content
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name),
          html: {id: "forgot_password_form", method: :post}) do |f|
          %h1= t("forgot_password_form")
          = f.error_notification
          %div
            = f.input_field :email, required: true, autofocus: true,
              class: form_input_class(:email),
              placeholder: t("email")
            - show_field_errors(:email)
          %div
            %a{href: "#", class: "btn btn-default submit",
              onclick: "$('#forgot_password_form').submit();"}
              = t("submit_forgot_password")
          %div.clearfix
          %div.separator
          %div.change_link
            = t("go_back")
            %a.to_register{href: new_session_path(resource_name)}
              = t("login")
          = render "devise/shared/footer"