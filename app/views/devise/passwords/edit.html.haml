%div
  %div#wrapper
    %div#login
      %section.login_content
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name),
          html: {id: "change_password_form", method: :put}) do |f|
          %h1= t("change_password_form")
          = f.error_notification
          %div
            = f.input_field :email, required: true, autofocus: true,
              class: form_input_class(:email),
              placeholder: t("email")
            - show_field_errors(:email)
          %div
            %a{href: "#", class: "btn btn-default submit",
              onclick: "$('#change_password_form').submit();"}
              = t("change_password_submit")
          %div.clearfix
          %div.separator
          %div.change_link
            = t("go_back")
            %a.to_register{href: new_session_path(resource_name)}
              = t("login")
          = render "devise/shared/footer"





%h2 Change your password
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, label: "Confirm your new password", required: true
  .form-actions
    = f.button :submit, "Change my password"
= render "devise/shared/links"
