- platform_type = Rails.application.config.constants['platform_type']
%div
  %div#wrapper
    %div#login
      %section.login_content
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :login_form) do |f|
          %h1= t("registration_form")
          = f.error_notification
          = f.input :first_name, required: true, placeholder: t("first_name")
          = f.input :last_name, required: true, placeholder: t("last_name")
          = f.input :email, required: true, placeholder: t("email")
          = f.input :password, required: true, placeholder: t("password")
          = f.input :password_confirmation, required: true, placeholder: t("confirmation_password")
          %div
            %button.btn.btn-default.submit
              = t("register")
          %div.clearfix
          %div.separator
          %div.change_link
            = t("already_registered")
            %a.to_register{href: new_session_path(resource_name)}
              = t("login")
          = render "devise/shared/footer_#{platform_type}"
