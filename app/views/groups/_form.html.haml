= simple_form_for(group) do |f|
  = f.error_notification
  = f.input :name
  = f.input :member_ids,
                  as: :select,
                  collection: User.all,
                  label_method: :name,
                  include_blank: false,
                  input_html: { multiple: true }

  = f.input :owner_ids,
                  as: :select,
                  collection: User.all,
                  label_method: :name,
                  include_blank: false,
                  input_html: { multiple: true }
  .ln_solid
  .form-group
    .col-md-6.col-md-offset-3
      = f.button :submit
:javascript
  $("#group_member_ids").select2({
    theme: "bootstrap"
  });

  $("#group_owner_ids").select2({
    theme: "bootstrap"
  });
