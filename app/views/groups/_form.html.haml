= simple_form_for(group) do |f|
  = f.error_notification
  = f.input :name
  = f.association :children, collection: @group.offspring_candidates
  = f.association :parents, disabled: true
  = f.input :default

  .ln_solid
  .form-group
    .col-md-6.col-md-offset-3
      = f.button :submit, class: 'btn btn-success'
:javascript
  $("#group_child_ids").select2({ theme: "bootstrap" });
  $("#group_parent_ids").select2({ theme: "bootstrap" });
