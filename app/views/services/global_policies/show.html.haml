%h1= t('.title', service_name: @service.name, name: @resource.name)
= render('services/show_layout') do
  .x_title
    %h2
      = @resource.name
      %small= @resource.uri

    %ul.nav.navbar-right.panel_toolbox
      %li
        = link_to(service_global_policies_path(@service), class: 'back') do
          = icon("hand-o-left", title: t('.back_to_index'))
      %li
        = link_to(edit_service_global_policy_path(@service, @resource), class: 'edit') do
          = icon('edit', title: t('edit'))
      %li
        = link_to(service_global_policy_path(@service, @resource),
          method: :delete, class: 'delete',
          data: { confirm: t('are_you_sure') }) do
          = icon('remove', title: t('remove'))
    .clearfix
