.row
  .col-md-8
    .x_panel
      .x_title
        %h2
          = t '.title'
          %small= t '.subtitle'

        %ul.nav.navbar-right.panel_toolbox
          %li
            = link_to(services_path, class: 'back') do
              = icon("hand-o-left", title: t('.back_to_index'))
        .clearfix

      .x_content
        = render partial: 'form', locals: { service: @service }
  .col-md-4
    = render 'new_help'