.navbar.nav_title{style: "border: 0;"}
  = link_to root_path, class: 'site_title' do
    %i.fa.fa-heartbeat.logo
    = t("title")

.profile
  .profile_pic
    = image_tag current_user.gravatar_url(size: 56), class: 'img-circle profile_img'
  .profile_info
    %span= t('welcome')
    %h2= current_user.name
.clearfix
%br

#sidebar-menu.main_menu_side.hidden-print.main_menu
  .menu_section
    %ul.nav.side-menu
      %li
        %a(href=patients_path)
          = icon("heart")
          = t("patient.menu_item")
      %li
        %a
          = icon("sliders")
          = t("settings")
          - if @user_confirmations && policy(:admin).manage_users?
            = icon("exclamation-triangle")
          %span.fa.fa-chevron-down
        %ul.nav.child_menu
          %li= link_to(t("profile"), edit_user_registration_path, "data-url-alias": user_registration_url)
          - if policy(:admin).manage_users?
            %li
              %a{href: url_for(account_confirmations_index_path)}
                = t("user_confirmation")
                - if @user_confirmations
                  = icon("exclamation-triangle")
      %li
        %a
          = icon("gears")
          = t("administration")
          %span.fa.fa-chevron-down
        %ul.nav.child_menu
          %li= link_to(t("resources"), resources_path,
            "data-url-alias": new_resource_path + "," + new_permission_path + "," + permissions_path)
      - if policy(:plgrid).show?
        %li
          %a
            = icon('cogs')
            = t('plgrid')
            %span.fa.fa-chevron-down
          %ul.nav.child_menu
            %li= link_to('PLGrid action 1', "/b")
            %li= link_to('PLGrid action 2', "/c")
            %li= link_to('PLGrid action 3', "/d")

.sidebar-footer.hidden-small
  = render 'layouts/footer'
