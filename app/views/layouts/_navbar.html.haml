.top_nav.fixed_nav_bar
  .nav_menu
    %nav{ role: 'navigation' }
      .nav.toggle.hidden-lg.hidden-md
        %a#menu_toggle
          = icon('bars')
      = render 'layouts/flash'
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.user-profile.dropdown-toggle{ href: 'javascript:;', 'data-toggle' => 'dropdown', 'aria-expanded' => false }
            = image_tag current_user.gravatar_url(size: 29)
            = current_user.name
            %span.fa.fa-angle-down
          %ul.dropdown-menu.dropdown-usermenu.fadeInDown.pull-right
            - unless current_user.plgrid_login
              %li= link_to(t('connect_to_plgrid'), user_open_id_omniauth_authorize_path)
            %li= link_to t('profile'), profile_path
            %li
              = link_to destroy_user_session_path, method: :delete do
                = icon('sign-out', class: 'pull-right')
                = t('logout')
