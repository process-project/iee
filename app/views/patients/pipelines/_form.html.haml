= simple_form_for [patient, pipeline] do |f|
  = f.error_notification
  = f.input :flow, disabled: !pipeline.new_record?,
    collection: Pipeline::FLOWS.keys, include_blank: false
  = f.input :name
  = f.input :mode, disabled: !pipeline.new_record?,
    collection: Pipeline.modes.keys, include_blank: false

  = render 'pipeline_steps_form', patient: patient, pipeline: pipeline

  .ln_solid
  .form-group
    .col-md-6.col-md-offset-3
      = f.button :submit, class: 'btn btn-success'
