.row
  .col-md-12.col-sm-12.col-xs-12
    .x_panel
      .x_title
        %h2= t('.pipelines')
        %span.pull-right
          = link_to t('.new'), new_patient_pipeline_path(patient),
            class: 'btn btn-success'
        .clearfix
      .x_content
        %section.content
          = form_tag(patient_comparison_path(patient), method: :get) do
            %table.table
              %thead
                %tr
                  %th.iid= t('.id')
                  %th.select
                  %th= t('.name')
                  %th= t('.status')
              %tbody
                = render partial: 'patients/pipelines/pipeline',
                         collection: pipelines

            = submit_tag(t('.compare'), class: 'btn btn-success')
