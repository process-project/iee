%br
.x_panel
  .x_title
    %h2
      = patient.case_number
      %small= t '.subtitle'
    %span.pull-right
      = link_to t('.remove'), patient_path(patient), method: :delete,
        data: { confirm: t('.confirm') }, class: 'btn btn-sm btn-danger'
      = link_to t('.back'), patients_path, class: 'btn btn-sm btn-primary'
    .clearfix
  - if details
    %ul.list-inline
      %li
        #{t('.gender')}: #{details[:gender]}
        %span.label.label-info
          real
      %li
        #{t('.birth_year')}: #{details[:birth_year]}
        %span.label.label-info
          real
      %li
        #{t('.age')}: #{details[:age]}
        %span.label.label-info
          real
      %li
        #{t('.current_age')}: #{details[:current_age]}
        %span.label.label-success
          computed
      %li
        #{t('.weight')}: #{details[:weight]}
        %span.label.label-info
          real
      %li
        #{t('.height')}: #{details[:height]}
        %span.label.label-info
          real
      %li
        #{t('.bpprs')}: #{details[:bpprs]}
        %span.label.label-warning
          inferred
      %li
        #{t('.bpprd')}: #{details[:bpprd]}
        %span.label.label-warning
          inferred
  - else
    %div.label.label-danger= t '.no_details'
