%br
.x_panel
  .x_title
    %h2
      = patient.case_number
      %small= t '.subtitle'
    %span.pull-right
      = link_to t('.remove'), patient_path(patient), method: :delete,
        data: { confirm: t('.confirm') }, class: 'btn btn-sm btn-danger'
      = link_to t('.back'), patients_path, class: 'btn btn-sm btn-primary'
    .clearfix
  - if details[:status] == :ok
    %ul.list-inline
      - details[:payload].each do |value|
        %li
          #{t(".#{value[:name]}")}: #{value[:value]}
          %span(class = "label label-#{value[:style]}")
            = value[:type]
  - else
    %div.label.label-danger= t('.no_details', details: details[:message])
