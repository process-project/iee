.row
  .col-xs-6
    .x_panel
      .x_title
        %h3= t('.pipeline_inputs', name: pipeline.name)
      .x_content
        %section.content
          = render partial: 'file_store/file_browser_multi',
            locals: { target_path: pipeline.inputs_dir,
              element_id: 'patient-inputs', disable_mkdir: true,
              sortingField: 'date', sortingOrder: 'descending' }
    .x_panel
      .x_title
        %h3= t('.patient_inputs', name: patient.case_number)
      .x_content
        %section.content
          = render partial: 'file_store/file_browser_multi',
            locals: { target_path: patient.inputs_dir,
              element_id: 'pipeline-inputs', disable_mkdir: true,
              sortingField: 'date', sortingOrder: 'descending' }

  .col-xs-6
    .x_panel
      .x_title
        %h3= t('.pipeline_outputs', name: pipeline.name)
      .x_content
        %section.content
          = render partial: 'file_store/file_browser_multi',
            locals: { target_path: pipeline.outputs_dir,
              element_id: 'patient-outputs', disable_mkdir: true,
              disable_upload: true, sortingField: 'date',
              sortingOrder: 'descending' }

= render partial: 'file_store/file_browser_multi_include'

