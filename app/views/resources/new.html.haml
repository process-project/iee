.row
  .col-md-12
    .x_panel
      .x_title
        %h2
          = t('.title')
          %small= t('.subtitle')
        %ul.nav.navbar-right.panel_toolbox
          %li
            = link_to(resources_path, class: 'back') do
              = icon('hand-o-left', title: t('.back'))
        .clearfix
      .x_content
        = simple_form_for(resource) do |f|
          = f.error_notification
          = f.input :name, label: t('.name')
          = f.association :service, collection: @services,
                                    label_method: :uri,
                                    include_blank: false,
                                    required: true
          = f.input :path, label: t('.path')
          .ln_solid
          .form-group
            .col-md-6.col-md-offset-3
              = f.button :submit, t('.submit'), class: 'btn btn-success'
