= simple_form_for([model.resource, model.access_policy]) do |f|
  .col-md-6.col-md-offset-3
    %h5= t('.add')
    = f.error_notification
  .form-group
  = f.association :user,
    label: t('.pick_user'),
    collection: model.users,
    label_method: ->(user) { raw_user_name(user) },
    hint: t('.user_or_group'),
    include_blank: true
  = f.association :group,
    label: t('.pick_group'),
    collection: model.groups,
    include_blank: true
  = f.association :access_method,
    label: t('.pick_method'),
    collection: model.access_methods,
    as: :radio_buttons
  .ln_solid
  .form-group
    .col-md-6.col-md-offset-3
      = f.button :submit, class: 'btn btn-success'
